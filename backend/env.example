# Twilio Configuration
# Copy this file to .env and fill in your actual Twilio credentials

# Your Twilio Account SID (found in your Twilio Console)
TWILIO_ACCOUNT_SID=your_account_sid_here

# Your Twilio Auth Token (found in your Twilio Console)
TWILIO_AUTH_TOKEN=your_auth_token_here

# Your Twilio Phone Number (in E.164 format, e.g., +1234567890)
TWILIO_PHONE_NUMBER=+1234567890

# Your Twilio Phone Number SID
TWILIO_PHONE_NUMBER_SID=your_phone_number_sid_here

# Your Twilio Token SID (for client-side tokens)
TWILIO_TOKEN_SID=your_token_sid_here

# Your Twilio Secret (for client-side tokens)
TWILIO_SECRET=your_secret_here

# Your Twilio Verify Service SID
TWILIO_VERIFY_SERVICE=your_verify_service_sid_here

# Optional: Additional Twilio settings
# TWILIO_WEBHOOK_URL=https://your-domain.com/webhook
# TWILIO_WORKSPACE_SID=your_workspace_sid_here

# JWT Configuration
# JWT Secret Key (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# JWT Token Expiration (default: 24h)
JWT_EXPIRES_IN=24h
